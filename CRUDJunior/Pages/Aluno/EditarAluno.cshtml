@page "/EditarAluno/{id:int}"
@model CRUDJunior.Pages.Aluno.EditarAlunoModel
@{
    ViewData["Title"] = "Editar Aluno";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
        <div class="container mt-4">
            <h1>@ViewData["Title"]</h1>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Editar Aluno</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>ID:</strong> @Model.Command.Id</li>
                        <li class="list-group-item"><strong>Primeiro Nome:</strong> @Model.Command.PrimeiroNome</li>
                        <li class="list-group-item"><strong>Último Nome:</strong> @Model.Command.UltimoNome</li>
                        <li class="list-group-item"><strong>Documento:</strong> @Model.Command.Documento</li>
                        <li class="list-group-item"><strong>Data de Nascimento:</strong> @Model.Command.DataNascimento.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item"><strong>Telefone:</strong> @Model.Command.Telefone</li>
                        <li class="list-group-item"><strong>Imagem:</strong> @Model.Command.Imagem</li>
                    </ul>
                </div>
            </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>