@page
@model CRUDJunior.Pages.Aluno.CadastroAlunoModel
@{
    ViewData["Title"] = "Cadastro de Alunos";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>

        <form method="post">
            <div class="form-group">
                <label for="primeiroNome">Primeiro Nome:</label>
                <input type="text" id="primeiroNome" name="PrimeiroNome" asp-for="Model.PrimeiroNome" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="ultimoNome">Último Nome:</label>
                <input type="text" id="ultimoNome" name="UltimoNome" asp-for="Model.UltimoNome" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="documento">Documento:</label>
                <input type="text" id="documento" name="Documento" asp-for="Model.Documento" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="dataNascimento">Data de Nascimento:</label>
                <input type="date" id="dataNascimento" name="DataNascimento" asp-for="Model.DataNascimento" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="telefone">Telefone:</label>
                <input type="tel" id="telefone" name="Telefone" asp-for="Model.Telefone" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="imagem">Imagem:</label>
                <input type="text" id="imagem" name="Imagem" asp-for="Model.Imagem" class="form-control" />
                <br />
            </div>
            <button type="submit" class="btn btn-primary">Adicionar Aluno</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>